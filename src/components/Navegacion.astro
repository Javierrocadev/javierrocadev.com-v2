<!-- Script para manejar el menú y bloquear el scroll -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const menuToggle = document.getElementById('menu-toggle');
    const closeMenu = document.getElementById('close-menu');
    const mobileMenu = document.getElementById('navbar-sticky');
    
    // Función para bloquear el scroll del body
    function toggleBodyScroll(isLocked: boolean) {
      if (isLocked) {
        // Guarda la posición actual del scroll
        const scrollY = window.scrollY;
        document.body.style.position = 'fixed';
        document.body.style.top = `-${scrollY}px`;
        document.body.style.width = '100%';
      } else {
        // Restaura la posición del scroll
        const scrollY = document.body.style.top;
        document.body.style.position = '';
        document.body.style.top = '';
        document.body.style.width = '';
        window.scrollTo(0, parseInt(scrollY || '0') * -1);
      }
    }
    
    // Abre el menú y bloquea el scroll
    menuToggle?.addEventListener('click', function() {
      mobileMenu?.classList.remove('hidden');
      toggleBodyScroll(true);
    });
    
    // Cierra el menú y desbloquea el scroll
    closeMenu?.addEventListener('click', function() {
      mobileMenu?.classList.add('hidden');
      toggleBodyScroll(false);
    });
    
    // Si la ventana se redimensiona a un tamaño de escritorio mientras el menú está abierto
    window.addEventListener('resize', function() {
      if (window.innerWidth >= 768 && !mobileMenu?.classList.contains('hidden')) {
        toggleBodyScroll(false);
      }
    });
  });
</script>